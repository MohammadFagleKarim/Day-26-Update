@model Signature.Model.Model.Product
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>
    <div>
        <form method="post">
            <table>
                <tr>
                    <td>Category</td>
                    <td><input type="text" name="Category" value="@Model.CategoryId" /></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Code</td>
                    <td><input type="text" name="Code" value="@Model.Code" /></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Name</td>
                    <td><input type="text" name="Name" value="@Model.Name" /></td>
                    <td></td>
                </tr>
                <tr>
                    <td>ReorderLevel</td>
                    <td><input type="text" name="ReorderLevel" value="@Model.ReorderLevel" /></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td><input type="text" name="Description" value="@Model.Description" /></td>
                    <td></td>
                </tr>
                <tr>

                    <td></td>
                    <td><input type="submit" value="Update" /></td>
                    <td>
                        @if (ViewBag.Message != null)
                        {
                            <h3>
                                <b>
                                    @ViewBag.Message
                                </b>
                            </h3>
                        }
                    </td>
                </tr>
            </table>
        </form>
    </div>
</body>
</html>
